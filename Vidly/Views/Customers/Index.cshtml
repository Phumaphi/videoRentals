@model Vidly.ViewModels.CustomerViewModel

@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Custom.Count == 0)
{
    <p>no customers at the moment</p>
}
else
{

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cust in Model.Custom)
            {

                // var id = cust.Id;

                <tr>
                    @*<td> @Html.ActionLink(@cust.Name, $"Details/{ id}", "Customers")</td>*@
                    <td>@Html.ActionLink(cust.Name, "Details", "Customers", new { id = cust.Id }, null)</td>
                    <td>@cust.MembershipType.DiscountRate%</td>
                </tr>
            }
        </tbody>
    </table>
    <ul>
    </ul>
}
<p>this works fine</p>