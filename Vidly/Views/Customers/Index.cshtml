@section scripts
{
    @*<script src="~/Content/Customer.js"> </script>*@

    <script>
        $(document).ready(function () {
            var table = $("#customers").DataTable({

                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, rowRenderedOfCustomer) {
                            debugger;
                            return "<a href='/customers/edit/ " +
                                rowRenderedOfCustomer.id +
                                "'>" +
                                rowRenderedOfCustomer.name +
                                "</a>";
                        }
                    },
                    {
                        data: "membershipType.name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='delete btn-link' data-customer-id= " + data + ">Delete</button>";
                        }

                    }
                ]
            });
            $("#customers ").on("click", ".delete",
                function () {
                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete this customer?", function (result) {

                        if (result) {
                            $.ajax({
                                url: "/api/customers/" + button.attr("data-customer-id"),
                                method: "DELETE",
                                success: function () {

                                    table.row(button.parents("tr")).remove().draw();
                                }
                            });
                        }
                    });


                });
        });
    </script>
}
